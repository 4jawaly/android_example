<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/light_orang" >

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custome_drawable_checkbox"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/phoneBookStatsTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/checkBox1"
        android:layout_alignTop="@+id/checkBox1"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/checkBox1"
        android:gravity="right|center_vertical"
        android:paddingLeft="@dimen/confirm_dialog_base_padding"
        android:paddingRight="@dimen/confirm_dialog_base_padding"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phoneBookStatsTextView"
        android:layout_alignRight="@+id/phoneBookStatsTextView"
        android:layout_below="@+id/phoneBookStatsTextView"
        android:layout_marginLeft="8dp"
        android:paddingRight="@dimen/confirm_dialog_base_padding"
        android:paddingLeft="@dimen/confirm_dialog_base_padding"
        android:text="@string/mobile"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>