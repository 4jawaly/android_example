<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Header">
        
        <item name="android:background">@drawable/header</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">45dp</item>

    </style>

    <style name="LoginContainer">
        <item name="android:height">224dp</item>
        <item name="android:background">@drawable/bg_container</item>
    </style>

    <style name="Input">
        <item name="android:background">@drawable/stroked_shape</item>
    </style>

    <style name="Button">
        <item name="android:height">30dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ForgetButton" parent="Button">
        <item name="android:background">@drawable/stroked_shape</item>
        <item name="android:width">222dp</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">#7b7b7b</item>
    </style>

    <style name="LoginRememberMe">
        <item name="android:width">188dp</item>
        <item name="android:height">60dp</item>
        <item name="android:background">@drawable/stroked_shape</item>
    </style>

    <style name="MobileInput">
        <item name="android:width">243dp</item>
        <item name="android:height">60dp</item>
        <item name="android:background">@drawable/stroked_shape</item>
    </style>

    <style name="CountryCodeInput">
        <item name="android:width">110dp</item>
        <item name="android:height">60dp</item>
        <item name="android:background">@drawable/stroked_shape</item>
    </style>

    <style name="CountryInput">
        <item name="android:height">60dp</item>
    </style>

    <style name="BalanceIcon">
        <item name="android:width">90dp</item>
        <item name="android:height">90dp</item>
        <item name="android:background">@drawable/ic_balance</item>
    </style>

    <style name="BalanceText">
        <item name="android:textColor">#7c7c7c</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BalanceAmount">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RechargBtn" parent="Button">
        <item name="android:background">@drawable/cart_btn</item>
        <item name="android:width">225dp</item>
        <item name="android:height">45dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RechargBtnIcon">
        <item name="android:padding">30dp</item>
    </style>

    <style name="PhoneDirecteroySelectedNumbers">
       
        <item name="android:textColor">#5D5D5D</item>
        <item name="android:background">@drawable/white_strok_shape</item>
    </style>

    <style name="SmallSpinner">
        <item name="android:background">@drawable/custom_drawable_spinner</item>
        <item name="android:width">200dp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="MenuHeader">
        <item name="android:background">#0093c6</item>
        <item name="android:height">97dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- senders fragment -->
    <style name="TabBtn">
        <item name="android:width">225dp</item>
        <item name="android:height">60dp</item>
    </style>

</resources>